[Unit]
Description="WETTY: Terminal over HTTP and HTTPS. https://github.com/krishnasrinivas/wetty"
After=network.target auditd.service
[Service]
ExecStart=/usr/lib/node_modules/wetty/bin/wetty.js -p {{ wetty_port }} --sslkey /etc/ssl/wetty.key.pem --sslcert /etc/ssl/wetty.cert.pem
Restart=always
[Install]
WantedBy=multi-user.target
